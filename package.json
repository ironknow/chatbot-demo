{
  "name": "chatbot-demo",
  "version": "1.0.0",
  "description": "A full-stack chatbot demo with React frontend and Node.js API",
  "private": true,
  "packageManager": "pnpm@10.18.2",
  "scripts": {
    "dev": "pnpm --parallel dev:web dev:api",
    "dev:web": "pnpm --filter web start",
    "dev:api": "pnpm --filter api dev",
    "build": "pnpm build:web",
    "build:web": "pnpm --filter web build",
    "start": "pnpm start:api",
    "start:api": "pnpm --filter api start",
    "start:web": "pnpm --filter web start",
    "serve:web": "pnpm --filter web serve",
    "test": "pnpm --recursive test",
    "test:web": "pnpm --filter web test",
    "test:api": "pnpm --filter api test",
    "lint": "pnpm --recursive lint",
    "lint:web": "pnpm --filter web lint",
    "lint:api": "pnpm --filter api lint",
    "clean": "pnpm --recursive exec rm -rf node_modules && rm -rf node_modules",
    "clean:build": "pnpm --recursive exec rm -rf build dist",
    "install:all": "pnpm install",
    "setup": "pnpm install && pnpm --filter api exec cp .env.example .env",
    "quick-start": "node scripts/quick-start.js",
    "health": "curl -s http://localhost:5000/api/health | jq . || echo 'API not running'",
    "db:up": "node scripts/db-manager.js up",
    "db:down": "node scripts/db-manager.js down",
    "db:restart": "node scripts/db-manager.js restart",
    "db:logs": "node scripts/db-manager.js logs",
    "db:status": "node scripts/db-manager.js status",
    "db:reset": "node scripts/db-manager.js reset",
    "db:setup": "node scripts/db-manager.js setup",
    "db:help": "node scripts/db-manager.js help",
    "db:studio": "pnpm --filter api db:studio",
    "db:seed": "pnpm --filter api db:seed",
    "db:generate": "pnpm --filter api db:generate",
    "db:push": "pnpm --filter api db:push",
    "db:migrate": "pnpm --filter api db:migrate"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "chatbot",
    "react",
    "nodejs",
    "express",
    "fullstack"
  ],
  "author": "",
  "license": "ISC"
}